{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [
    ".clinerules/*.md",
    ".cursor/rules/*.md",
    ".github/copilot-instructions.md",
    ".instructions.md",
    "CONTRIBUTING.md",
    "docs/guidelines.md"
  ],
  "theme": "tokyonight",
  "share": "disabled",
  "layout": "stretch",
  "autoupdate": true,
  "disabled_providers": [
    "amazon-bedrock",
    "anthropic",
    "azure",
    "deepseek",
    "github-models",
    "google",
    "google-vertex",
    "groq",
    "llama",
    "mistral",
    "morph",
    "openai",
    "openrouter",
    "opencode",
    "opencode zen",
    "vercel",
    "xai"
  ],
  "permission": {
    "bash": {
      "aws*": "ask",
      "cdk*": "ask",
      "cdktf*": "ask",
      "terraform*": "ask",
      "terragrunt*": "ask",
      "tofu*": "ask",
      "*": "allow"
    }
  },
  "keybinds": {
    "leader": "ctrl+b",
    "app_help": "<leader>h",
    "app_exit": "ctrl+c,<leader>q",
    "editor_open": "<leader>e",
    "theme_list": "<leader>t",
    "project_init": "<leader>i",
    "tool_details": "<leader>d",
    "thinking_blocks": "<leader>b",
    "session_export": "<leader>x",
    "session_new": "<leader>n",
    "session_list": "<leader>l",
    "session_interrupt": "esc",
    "session_compact": "<leader>c",
    "session_child_cycle": "tab",
    "session_child_cycle_reverse": "shift+tab",
    "messages_page_up": "pgup",
    "messages_page_down": "pgdown",
    "messages_half_page_up": "alt+up",
    "messages_half_page_down": "alt+down",
    "messages_first": "ctrl+g",
    "messages_last": "ctrl+alt+g",
    "messages_copy": "<leader>y",
    "messages_undo": "<leader>u",
    "messages_redo": "<leader>r",
    "model_list": "<leader>m",
    "model_cycle_recent": "f2",
    "model_cycle_recent_reverse": "shift+f2",
    "agent_list": "<leader>a",
    "agent_cycle": "<leader>]",
    "agent_cycle_reverse": "<leader>[",
    "input_clear": "ctrl+c",
    "input_paste": "ctrl+v",
    "input_submit": "enter",
    "input_newline": "shift+enter,ctrl+j"
  },
  "model": "github-copilot/gpt-5-mini",
  "mode": {
    "build": {
      "model": "github-copilot/claude-sonnet-4.5",
      "mode": "primary"
    },
    "plan": {
      "model": "github-copilot/claude-sonnet-4.5",
      "mode": "primary"
    }
  },
  "mcp": {
    "github": {
      "enabled": true,
      "type": "local",
      "command": ["bash", "/Users/bwright/.config/opencode/scripts/github"]
    },
    "awslabs-core-mcp-server": {
      "enabled": true,
      "type": "local",
      "command": [
        "bash",
        "/Users/bwright/.config/opencode/scripts/awslabs.core-mcp-server"
      ],
      "environment": {
        "FASTMCP_LOG_LEVEL": "ERROR"
      }
    },
    "awslabs-cdk-mcp-server": {
      "enabled": false,
      "type": "local",
      "command": [
        "bash",
        "/Users/bwright/.config/opencode/scripts/awslabs.cdk-mcp-server"
      ],
      "environment": {
        "FASTMCP_LOG_LEVEL": "ERROR"
      }
    },
    "awslabs-cost-explorer-mcp-server": {
      "enabled": false,
      "type": "local",
      "command": [
        "bash",
        "/Users/bwright/.config/opencode/scripts/awslabs.cost-explorer-mcp-server"
      ],
      "environment": {
        "FASTMCP_LOG_LEVEL": "ERROR"
      }
    },
    "awslabs-terraform-mcp-server": {
      "enabled": false,
      "type": "local",
      "command": [
        "bash",
        "/Users/bwright/.config/opencode/scripts/awslabs.terraform-mcp-server"
      ],
      "environment": {
        "FASTMCP_LOG_LEVEL": "ERROR"
      }
    },
    "awslabs-cloudwatch-mcp-server": {
      "enabled": false,
      "type": "local",
      "command": [
        "bash",
        "/Users/bwright/.config/opencode/scripts/awslabs.cloudwatch-mcp-server"
      ],
      "environment": {
        "FASTMCP_LOG_LEVEL": "ERROR"
      }
    },
    "awslabs-aws-documentation-mcp-server": {
      "enabled": true,
      "type": "local",
      "command": [
        "bash",
        "/Users/bwright/.config/opencode/scripts/awslabs.aws-documentation-mcp-server"
      ],
      "environment": {
        "FASTMCP_LOG_LEVEL": "ERROR",
        "AWS_DOCUMENTATION_PARTITION": "aws"
      }
    },
    "awslabs-aws-diagram-mcp-server": {
      "enabled": false,
      "type": "local",
      "command": [
        "bash",
        "/Users/bwright/.config/opencode/scripts/awslabs.aws-diagram-mcp-server"
      ],
      "environment": {
        "FASTMCP_LOG_LEVEL": "ERROR"
      }
    },
    "container-use": {
      "type": "local",
      "command": [
        "bash",
        "/Users/bwright/.config/opencode/scripts/container-use-run"
      ],
      "enabled": false
    }
  },
  "formatter": {
    "dprint-markdown": {
      "command": ["dprint", "fmt", "--config", "~/.dprint.json", "$FILE"],
      "extensions": [".md"]
    }
  }
}
